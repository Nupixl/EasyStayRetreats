# NPM Configuration for Webflow Cloud
# Optimize for faster builds and avoid clean installs

# Use npm cache aggressively (modern syntax)
prefer-offline=true
prefer-online=false

# Skip unnecessary operations
audit=false
fund=false
update-notifier=false

# Use npm ci for faster, reliable installs
engine-strict=true

# Performance optimizations
progress=false
loglevel=warn

# Security (disable for faster builds in CI)
audit-level=moderate

# Cache configuration (modern approach)
cache-max=604800000
